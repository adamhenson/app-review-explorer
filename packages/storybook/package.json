{
  "name": "@app-review-explorer/storybook",
  "version": "1.0.0",
  "description": "Storybook for component documentation and testing",
  "private": true,
  "scripts": {
    "build": "cd ../.. && npm run build --workspace=packages/ui && cd packages/storybook && storybook build",
    "dev": "storybook dev -p 6006",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "test-storybook",
    "test:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run build && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && npm run test\""
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.4.7",
    "@storybook/addon-actions": "^8.4.7",
    "@storybook/addon-controls": "^8.4.7",
    "@storybook/addon-docs": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-viewport": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/test-runner": "^0.19.1",
    "@storybook/theming": "^8.4.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "http-server": "^14.1.1",
    "postcss": "^8.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^8.4.7",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.0.0",
    "vite": "^6.0.1",
    "wait-on": "^8.0.1"
  }
}
